<div class="local-aiassistant-container" style="position: fixed; top: 50%; left: 50%; transform: translate(-50%, -50%); z-index: 99999; background: yellow; padding: 20px;">
    <h2 style="color: red;">AI CHAT TEST</h2>
    <div id="ai-chat-window" class="ai-chat-window">
        <div class="ai-chat-header">
            <span>{{{chat_title}}}</span>
            <button id="ai-chat-close" class="ai-chat-close" aria-label="Close chat">&times;</button>
        </div>
        <div id="ai-chat-messages" class="ai-chat-messages">
            <div class="ai-message ai-message-bot">
                {{{welcome_message}}}
            </div>
        </div>
        <div id="ai-chat-typing" class="ai-typing" hidden>
            <span>{{{chat_typing}}}</span>
        </div>
        <div class="ai-chat-input-area">
            <input type="text" id="ai-chat-input" placeholder="{{{chat_input_placeholder}}}">
            <button id="ai-chat-send" class="ai-chat-send" aria-label="Send">{{{chat_send}}}</button>
        </div>
    </div>
    <button id="ai-chat-button" class="ai-chat-button" aria-label="Open AI Assistant" style="background: red; color: white; padding: 20px; font-size: 20px;">
        ðŸ’¬ CLICK AQUI
    </button>
</div>